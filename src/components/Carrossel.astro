---
const technologies = [
  "astro",
  "react",
  "tailwindcss",
  "HTML5",
  "CSS3",
  "javaScript",
  "git",
  "figma"
];
---

<div class="relative overflow-x-hidden py-8 bg-preto-secundario w-full">
  <!-- Gradientes laterais cobrindo as laterais fora do conteúdo -->
  <div class="absolute inset-y-0 left-0 right-auto bg-preto-secundario z-20 w-[calc((100vw-1440px)/2)]"></div>
  <div class="absolute inset-y-0 right-0 left-auto bg-preto-secundario z-20 w-[calc((100vw-1440px)/2)]"></div>

  <!-- Container centralizado com largura máxima de 1440px -->
  <div class="w-full max-w-[1440px] mx-auto relative">
    
    <!-- Container do LogoWall com animação infinita -->
    <div class="flex animate-scroll hover:animate-paused gap-12 md:gap-20 w-max">
      {[...technologies, ...technologies, ...technologies].map((tech, index) => (
        <div key={index} class="flex items-center gap-2 group transition-all duration-300">
          <img
            src={`/assets/${tech}.png`}
            alt={tech}
            class="h-7 w-auto object-contain transition-transform group-hover:scale-110 opacity-60"
            width="30"
            height="30"
            loading="lazy"
          />
          <span class="text-lg font-medium text-white">
            {tech.charAt(0).toUpperCase() + tech.slice(1)}
          </span>
        </div>
      ))}
    </div>

  </div>
</div>

<style is:global>
  /* Animação de rolagem infinita */
  @keyframes scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-33.33%); } /* Ajuste para suavizar o looping */
  }

  .animate-scroll {
    animation: scroll 20s linear infinite;
  }

  @media (min-width: 768px) {
    .animate-scroll {
      animation-duration: 35s;
    }
  }
</style>



