<section class="min-h-screen  flex flex-col  justify-center items-center bg-preto-secundario fonte-principal relative text-white ">

    <div class="w-full max-w-[1440px] mx-auto px-[2rem] lg:px-[11rem] ">
        
        <div class="flex flex-col lg:flex-row items-center  justify-between w-full py-35 ">
            <div class="lg:w-1/2">
                <div class="font-semibold text-lg cinza ">
                    <p>Tem uma idéia para seu site ou proposta ?</p>
                    <h2 class="font-extrabold text-[3.5rem] leading-16 roxo mt-4 fonte-terciaria">Entre em <br>contato</h2>
                </div>
    
                <div>
                    <hr>
                    <div class="flex py-15">
                        <img src="/assets/location.png" alt="location0" class="h-7"/>
                        <p>Localizado em: Rio Branco, Acre, Brasil</p>
                    </div>
                </div>
            </div>
    
    
    

            <div class="w-full md:w-3/4 lg:w-1/2 flex justify-center px-0 md:px-0">
                <form class="flex flex-col w-full border-1 gap-4 bg-preto-principal rounded-lg border-[#b7b7b7] p-6 md:p-10 pb-10 justify-center items-center text-xs lg:text-lg">
                    <div class="flex flex-col w-full max-w-[33rem]">
                        <label for="nome" class="p-2 text-lg">Nome <span class="roxo">*</span></label>
                        <input required type="text" name="nome" id="nome" placeholder="Digite seu nome" class="rounded-lg border-1 border-[#b7b7b7] text-white text-start h-[4rem] w-full p-5">
                    </div>
            
                    <div class="flex flex-col w-full max-w-[33rem]">
                        <label for="email" class="p-2 text-lg">Email <span class="roxo">*</span></label>
                        <input required type="email" name="email" id="email" placeholder="Digite seu email" class="rounded-lg border-1 border-[#b7b7b7]  text-white text-start h-[4rem] w-full p-5">
                    </div>
            
                    <div class="flex flex-col w-full max-w-[33rem]">
                        <label for="mensagem" class="p-2 text-lg">Mensagem <span class="roxo">*</span></label>
                        <textarea required name="mensagem" id="mensagem" rows="4" class="border-1 border-[#b7b7b7] text-white resize-none w-full rounded-lg p-5" placeholder="O que você quer me dizer? :)"></textarea>
                    </div>
            
                    <div class="pt-10">
                        <button type="submit" class="h-[2rem] w-full max-w-[20rem] bg-white text-[#101010] hover:bg-gray-200 font-bold flex justify-center items-center p-6 px-15 lg:px-30 rounded-lg cursor-pointer">ENVIAR</button>
                    </div>
                </form>
            </div>
            
        </div>
    </div>
  
  
</section>

<script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.querySelector("form");
    
      form.addEventListener("submit", async (event) => {
        event.preventDefault();
        const formData = new FormData(form);
    
        try {
          const response = await fetch("https://formspree.io/f/xovjkeaz", {
            method: "POST",
            body: formData,
            headers: { "Accept": "application/json" }
          });
    
          if (response.ok) {
            alert("Mensagem enviada com sucesso!");
            form.reset();
          } else {
            alert("Erro ao enviar a mensagem. Tente novamente.");
          }
        } catch (error) {
          console.error("Erro ao enviar o formulário:", error);
          alert("Erro ao enviar a mensagem.");
        }
      });
    });
    </script>
    